<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />

            <gradient
                android:angle="135"
                android:startColor="#b30047"
                android:centerColor="#b30047"
                android:endColor="#b30047"
                android:type="linear" />
            <stroke
                android:width="2dp"
                android:color="@color/white" />
            <padding
                android:bottom="4dp"
                android:left="4dp"
                android:right="4dp"
                android:top="4dp" />

        </shape>
    </item>

</selector>