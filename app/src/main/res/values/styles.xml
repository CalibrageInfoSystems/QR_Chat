<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:supportsRtl">true</item>
        <item name="android:dropDownListViewStyle">@style/popup</item>
    </style>

    <style name="Common_Button" parent="android:Widget.Button">

        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/varela_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Common_WhiteButton" parent="android:Widget.Button">

        <item name="android:background">@drawable/white_buttonbg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/varela_regular</item>
        <item name="android:textColor">@color/appColor</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="CommonButton" parent="android:Widget.Button">

        <item name="android:background">@drawable/buttonbg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/varela_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar"> <!-- changed .DarkActionBar to .NoActionBar -->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:supportsRtl">true</item>


    </style>

    <style name="NoActionBarOptionsMenu" parent="Theme.AppCompat.Light.NoActionBar"> <!-- changed .DarkActionBar to .NoActionBar -->
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:supportsRtl">true</item>


    </style>


    <style name="CustomEditText" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/edittextbg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/varela_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textDirection">locale</item>

    </style>

    <style name="CustomRectEditText" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/rectedittext_bg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/varela_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textDirection">locale</item>

    </style>


    <style name="CustomCountdownTimer" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/edittextbg</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:fontFamily">@font/varela_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:textDirection">locale</item>

    </style>
    <style name="CustomText" parent="@android:style/TextAppearance">

        <item name="android:background">@drawable/whitetext_bg</item>
        <item name="android:textColor">@color/appColor</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/varela_regular</item>
<!--        <item name="android:paddingStart">10dp</item>-->
<!--        <item name="android:paddingEnd">10dp</item>-->
        <item name="android:textDirection">locale</item>



    </style>
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogSlideAnim</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/loading</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
        <item name="DialogSpotColor">@color/colorPrimary</item>
        <item name="DialogSpotCount">4</item>
    </style>

    <style name="ToolBarTheme.ToolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
    </style>
    <!--  CustomCreateChannelFragment, CustomInviteChannelFragment  -->
    <style name="CustomUserListStyle" parent="SendBird.Custom">
        <item name="sb_recycler_view_style">@style/CustomUserListRecyclerView</item>
    </style>

    <style name="CustomUserListRecyclerView" parent="Widget.SendBird.RecyclerView">
        <item name="sb_pager_recycler_view_divide_margin_left">@dimen/sb_size_68</item>
    </style>

    <!--  CustomChannelListFragment  -->
    <style name="CustomChannelListStyle" parent="SendBird.Custom">
        <item name="sb_recycler_view_style">@style/CustomChannelListRecyclerView</item>
        <item name="android:theme">@style/NoActionBar</item>

    </style>

    <style name="CustomChannelListRecyclerView" parent="Widget.SendBird.RecyclerView">
        <item name="sb_pager_recycler_view_divide_margin_left">@dimen/sb_size_80</item>
     <item name="android:background">@color/very_lightgrey</item>
        <item name="android:paddingBottom">@dimen/sb_size_70</item>

    </style>

    <!--  CustomChannelFragment  -->
    <style name="CustomMessageListStyle" parent="SendBird.Custom">
        <item name="sb_message_user_style">@style/CustomUserMessage</item>
        <item name="sb_message_file_style">@style/CustomFileMessage</item>
    </style>

    <style name="CustomUserMessage" parent="Widget.SendBird.Message.User">
        <item name="sb_message_sender_name_text_appearance">@style/SendbirdCaption1Primary300</item>
    </style>

    <style name="CustomFileMessage" parent="Widget.SendBird.Message.File">
        <item name="sb_message_sender_name_text_appearance">@style/SendbirdCaption1Primary300</item>
    </style>
    <style name="CallTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/callBackground</item>
    </style>

    <style name="MyToolbar" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheet.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:textColor">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColorPrimary">#DD000000</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="bs_dialogBackground">@android:color/background_light</item>
        <item name="bs_dividerColor">@color/bs_divider_color</item>
        <item name="bs_numColumns">4</item>
        <item name="bs_titleTextAppearance">@style/Text.Headline</item>
        <item name="bs_listItemTitleTextAppearance">@style/Text.Title</item>
        <item name="bs_gridItemTitleTextAppearance">@style/Text.Hint</item>
        <item name="bs_moreText">@string/bs_more</item>
        <item name="bs_closeDrawable">@drawable/bs_ic_clear_light</item>
        <item name="bs_moreDrawable">@drawable/bs_ic_more_light</item>
        <item name="bs_collapseListIcons">true</item>
        <item name="bs_listItemLayout">@layout/bs_list_entry</item>
        <item name="bs_gridItemLayout">@layout/bs_grid_entry</item>
        <item name="bs_headerLayout">@layout/bs_header</item>
    </style>

    <style name="popup" parent="@android:style/Widget.DeviceDefault.Light.PopupMenu">
    <item name="android:textColor">@color/half_black2</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:itemBackground">@drawable/line</item>
    </style>

    <style name="menuStyle">
        <item name="android:paddingRight">@dimen/_8dp</item>
        <item name="android:layout_width">@dimen/_200dp</item>

    </style>

    <style name="menunewStyle">

        <item name="android:layout_width">@dimen/_200dp</item>

    </style>

