<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:id="@+id/linear"

        android:layout_marginBottom="-20dp"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:src="@drawable/statue"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-50dp"
            android:layout_gravity="right">

            <ImageView
                android:layout_gravity="right"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="-20dp"
                android:src="@drawable/logo" />

        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_500dp"
            android:weightSum="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:weightSum="1"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView

                    android:padding="10dp"
                    android:id="@+id/accountImg"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_account"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:weightSum="1"
                    android:padding="10dp"

                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Mahesh M"
                        android:id="@+id/aname"
                        android:textColor="@color/appColor"
                        android:textSize="20dp"/>

                    <TextView
                        android:id="@+id/timeer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:text="Today 11:15 PM"
                        android:textSize="16dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_three_dots_more_vertical_grey"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.7"
                android:weightSum="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/desc"
                    android:layout_weight="0.2"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="sfkllllllllllahgjkhk;lkgllllllllllllllllllllllllllllsdjkjkjksssssssssssssssssssssssssssssssssssssssssssssss"
                    android:textColor="@color/black"
                    android:lines="2"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    card_view:cardCornerRadius="30dp"
                    android:layout_margin="10dp"
                    android:elevation="10dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/feedImg"


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"


                       />
                    <RelativeLayout
                        android:layout_marginBottom="@dimen/margin_5"
                        android:id="@+id/webvideo_layout2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_200dp"
                        android:orientation="vertical"
           android:visibility="gone"
                        android:layout_gravity="center"
                        >


                        <VideoView
                            android:id="@+id/vdVw"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center">

                        </VideoView>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:weightSum="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.1"
                    android:layout_margin="16dp">

                    <ImageView
                        android:id="@+id/likeImg"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_favourite"/>

                    <TextView
                        android:id="@+id/likeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="906"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:textColor="@color/gray"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.1"
                    android:layout_marginTop="16dp">

                    <ImageView

                        android:id="@+id/commentImg"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_conversation"/>

                    <TextView
                        android:id="@+id/commentCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="906"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:textColor="@color/gray"/>



                </LinearLayout>


                <LinearLayout
                    android:visibility="invisible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.8"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_add"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="906"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textSize="18dp"
                        android:textColor="@color/gray"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

</LinearLayout>