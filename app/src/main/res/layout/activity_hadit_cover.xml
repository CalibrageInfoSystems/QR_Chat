<!--            android:orientation="vertical"-->

<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_gravity="center"-->
<!--            android:padding="@dimen/margin_10"-->
<!--            android:layout_marginBottom="@dimen/_50dp"-->
