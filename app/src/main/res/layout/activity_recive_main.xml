<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/very_lightgrey"
    android:layout_height="match_parent">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_gravity="top"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/white"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_100dp"
android:visibility="gone"
        android:gravity="center"
        android:id="@+id/statictext"
        android:orientation="vertical"
        android:weightSum="4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toast"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/varela_regular"
            android:textSize="@dimen/_18dp"
            android:textColor="@color/black"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
android:layout_marginTop="@dimen/_100dp"

        android:gravity="center"
        android:id="@+id/Qrcode"
        android:orientation="vertical"
        android:weightSum="4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toast"
            android:textStyle="bold"

            android:textAlignment="center"
            android:fontFamily="@font/varela_regular"
            android:textSize="@dimen/_18dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/haveownvehicle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative1"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <ImageView android:id="@+id/qrimage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:padding="@dimen/margin_5"
                android:background="@drawable/white_bg"
                android:layout_gravity="center"
                android:src="@drawable/qrcodee">
            </ImageView>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/receivemoneyfromanyqrchatuser"
            android:textStyle="bold"
            android:fontFamily="@font/varela_regular"
            android:textAlignment="center"
            android:textSize="@dimen/_16dp"
android:layout_marginTop="@dimen/margin_10"
            android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_bg"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/saveqrimage"
            android:textStyle="bold"
            android:fontFamily="@font/varela_regular"
        android:textAlignment="center"
            android:textSize="@dimen/_14dp"
         android:layout_gravity="center"
            android:id="@+id/savaqr"
            android:textColor="@color/appColor"/>
        <View
            android:layout_width="1dp"
            android:background="@color/half_black2"
            android:layout_height="match_parent">

        </View>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/generatedqrwithamout"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:padding="@dimen/margin_5"
            android:fontFamily="@font/varela_regular"
            android:textAlignment="center"
            android:textSize="@dimen/_14dp"
            android:id="@+id/addamount"
            android:textColor="@color/appColor"/>
    </LinearLayout>
</FrameLayout>